
MDScreen:
    MDBoxLayout:
        orientation:'vertical'

        MDTopAppBar:
            title: 'Free Meal'
            md_bg_color: .2, .2, .2, 1
            specific_text_color: 1, 1, 1, 1

        MDBottomNavigation:
            panel_color: .2, .2, .2, 1

            MDBottomNavigationItem:
                id:menu
                name: 'screen 1'
                text: 'Menu'
                icon: 'shape'
                on_tab_press: app.on_tab_press(*args)

                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True
                    MDGridLayout:
                        id:box
                        cols:2
                        spacing : '15dp'
                        size_hint_y : None
                        height: self.minimum_height
                        padding : '10dp'

            MDBottomNavigationItem:
                name: 'screen 2'
                text: 'Likes'
                icon: 'heart'

                MDLabel:
                    text: 'I programming of C++'
                    halign: 'center'

            MDBottomNavigationItem:
                name: 'screen 3'
                text: 'Random Food'
                icon: 'shuffle-variant'

                MDLabel:
                    text: 'JS'
                    halign: 'center'